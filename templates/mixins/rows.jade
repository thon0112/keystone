include columns

mixin row(list, colums, item)
  tr(id=item.id)
    if !list.get('nodelete') && ( !user || (user && item.id !== user.id ) ) && editable
      td.control: a(href='/keystone/' + list.path + '?delete=' + item.id + csrf_query).control-delete
    else if !list.get('nodelete') && editable
      td.control
    if !list.get('noedit') && !list.get('nocreate') && list.get('copyable') && editable
      td.control: a(href='/api?action=copy&model=' + list.path + '&id=' + item.id).control-copy
    if sortable /* && !xFilters  */  /*updated*/
      td.control: a(href=js).control-sort
    each col, i in columns
      td
        +column(list, col, item)
